<h1>Full Houseplant List</h1>

<%= search_form_for @q do |f| %>
  <%= f.label :name_or_species_cont %>
  <%= f.search_field :name_or_species_cont %>
<% end %>

<% @plants.each do |plant| %>
<ul class="media-list list-group">
  <li class="media list-group-item">
    <div class="media-left">
      <%= link_to image_tag("sprout.png", class: "media-object"), plant.link, target: "_blank" %>
    </div>
    <div class="media-body">
      <h4 class="media-heading"><%= link_to "#{plant.name}", plant.link, target: "_blank"%></h4>
      <em><%= plant.species %></em><br>
      <span class="listLink"><%= link_to "Add to My plants", add_plant_to_user_path(plant) %></span>
    </div>
  </li>
</ul>
<% end %>