<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">
    <%= f.text_field :username, placeholder: "Choose a username (this cannot be changed)", class: "form-control", autofocus: true %>
  </div>

  <div class="form-group">
    <%= f.email_field :email, class: "form-control", placeholder: "Enter your email - eg, you@yourmail.com" %>
  </div>

  <div class="form-group">
    <%= f.text_field :profile_pic, class: "form-control", placeholder: "Paste a link to a picture (optional)" %>
  </div>

  
  <div class="form-group">
    <%= f.password_field :password, class: "form-control", placeholder: "A six character password", autocomplete: "off" %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
  </div>

  <div class="form-group">
    <%= f.password_field :password_confirmation, class: "form-control", placeholder: "The same again!", autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", :class => "btn btn-success"%>
  </div>
<% end %>
